# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_SESSION_TTL=604800
REDIS_QUERY_TTL=3600

# Vector Store Configuration
VECTOR_STORE_TYPE=qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION=rag_documents
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION=rag_documents

# LLM Configuration
LLM_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium

# Embeddings Configuration
EMBEDDINGS_PROVIDER=jina
JINA_API_KEY=your_jina_api_key_here
JINA_MODEL=jina-embeddings-v2-base-en
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-small
HUGGINGFACE_EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Database Configuration (Optional)
DATABASE_ENABLED=false
DATABASE_URL=postgresql://username:password@localhost:5432/rag_db

# Data Ingestion Configuration
RSS_FEEDS=https://feeds.reuters.com/reuters/technologyNews,https://rss.cnn.com/rss/edition.rss,https://feeds.bbci.co.uk/news/technology/rss.xml
MAX_ARTICLES=50
CHUNK_SIZE=1000
CHUNK_OVERLAP=200